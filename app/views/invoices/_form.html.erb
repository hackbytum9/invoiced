<div class="container">

  <%= form_for [@customer,@invoice] do |f| %>
    <% if @invoice.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@invoice.errors.count, "error") %> prohibited
          this invoices from being saved:
        </h2>
        <ul>
          <% @invoice.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    

    <div class="form-group">
      <%= f.label :number %>
      <%= f.text_field :number ,class: "form-control",disabled: true %>
    </div>

    <div class="form-group">
      <%= f.label :issue_date %>
      <%= f.date_select :issue_date ,class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :due_date %>
      <%= f.date_select :due_date ,class: "form-control" %>
    </div>

    <h1>Line Items</h1>
    <%= f.fields_for :line_items, class: "form-line--item" do |item| %>
      <div class="form-inline fields line-items">
        <div class="form-group">
          <label>Product Name :</label>
          <%= item.text_field :name ,class: "form-control"  %> 
        </div>

        <div class="form-group">
          <label>Quanity :</label>
          <%= item.text_field :quantity ,class: "form-control" %>
        </div>

        <div class="form-group">
          <label>Price :</label>
          <%= item.text_field :price ,class: "form-control" %>
        </div>

        <div class="form-group">
          <label> Remove :</label>
          <%= item.check_box :_destroy %>
        </div>
      </div>
    <% end %>

    <%= f.submit 'Submit', class: "btn btn-primary" %>
  <% end %>

</div>