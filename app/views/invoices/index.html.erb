<div class="container">
<h1>Invoice <%= link_to 'add',new_invoice_path, class: "btn btn-primary pull-right" %> </h1>
<table class="table table-hover">

  <tr>
    <th>Number</th>
    <th>Issue</th>
    <th>Due</th>
    <th>Total</th>
    <th colspan="4"></th>
  </tr>
 
  <% @invoices.each do |invoice| %>
    <tr>
      
      <td><%= invoice.number %></td>
      <td><%= invoice.issue_date %></td>
      <td><%= invoice.due_date %></td>
      <td><%= invoice.total %></td>
      <td><%= link_to 'Show', invoice_path(invoice) ,class: "btn btn-info"%></td>
      <td><%= link_to 'Edit', edit_invoice_path(invoice) ,class: "btn btn-warning" %></td>
      <td><%= link_to 'Delete', invoice, method: :delete, data: { confirm: 'Are you sure?'  } ,class: "btn btn-danger" %></td>
    </tr>
</div>
    <% end %>


</table>


