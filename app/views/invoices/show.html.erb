
<p>
  <strong>number:</strong>
  <%= @invoice.number %>
</p>
 
<p>
  <strong>issue_date:</strong>
  <%= @invoice.issue_date %>
</p>

<p>
  <strong>due_date:</strong>
  <%= @invoice.due_date %>
</p>

<p>
  <strong>total:</strong>
  <%= @invoice.total %>
</p>

<div class="container panel panel-default">
  <div class="row panel-body">
  <%= form_for @invoice do |f| %>

    <h1>Line Item</h1>
    <table class="table table-bordered">
      <thead>
        <th>No.</th>
        <th>Product Name</th>
        <th>Quanity</th>
        <th>Price</th>
      </thead>
      <%= f.fields_for :line_items, class: "" do |item|  %>
        <tr>
          <td><%= item.index %></td>
          <td><%= item.object.name %></td>
          <td><%= item.object.quantity %></td>
          <td><%= item.object.price %></td>
        </tr>
      <% end %>
    </table> 

  <% end %> 
  </div>
</div>

<%= link_to 'Back', invoices_path ,class: "btn btn-info" %>